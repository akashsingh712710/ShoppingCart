@model IEnumerable<Entities.CartItem>

<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.ProductCode</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Product.MRP</td>
                <td>@(item.Quantity * item.Product.MRP)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Shipping" class="btn btn-primary">Continue to Shopping</a>
</div>
